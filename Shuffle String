class Solution {
    public String restoreString(String s, int[] indices) {
        int x = 0;
        char[] c = new char[s.length()];
        
        for (int i = 0; i < indices.length; i++)
        {
            c[indices[i]] = s.charAt(i);
            
        }
        
        return String.valueOf(c); 
    }
}
