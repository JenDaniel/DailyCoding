class Solution {
    public int strStr(String haystack, String needle) {
        int x = 0;
        int result = 0;
        
        if (haystack.contains(needle) == false)
        {
            result = -1;
        }
        
        else if(haystack.contains(needle))
        {
            result = haystack.indexOf(needle);
        }
        return result;
    }
}
